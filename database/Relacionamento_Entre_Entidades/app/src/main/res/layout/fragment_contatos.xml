<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContatosLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContatosFragment" >

    <TextView
        android:id="@+id/lblNomeContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="Nome:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFornecedorSpn" />

    <EditText
        android:id="@+id/txtNomeContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblNomeContato"
        app:layout_constraintStart_toEndOf="@+id/lblNomeContato"
        app:layout_constraintTop_toTopOf="@+id/lblNomeContato"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/lblFornecedorSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="Fornecedor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spnFornecedores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblFornecedorSpn"
        app:layout_constraintStart_toEndOf="@+id/lblFornecedorSpn"
        app:layout_constraintTop_toTopOf="@+id/lblFornecedorSpn"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lblEmailContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNomeContato" />

    <EditText
        android:id="@+id/txtEmailContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblEmailContato"
        app:layout_constraintStart_toEndOf="@+id/lblEmailContato"
        app:layout_constraintTop_toTopOf="@+id/lblEmailContato"
        app:layout_constraintVertical_bias="0.653" />

    <Button
        android:id="@+id/btnSalvarContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFoneContato" />

    <TextView
        android:id="@+id/lblFoneContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="Fone:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEmailContato" />

    <EditText
        android:id="@+id/txtFoneContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblFoneContato"
        app:layout_constraintStart_toEndOf="@+id/lblFoneContato"
        app:layout_constraintTop_toTopOf="@+id/lblFoneContato"
        app:layout_constraintVertical_bias="0.307" />

    <ListView
        android:id="@+id/lstContatos"
        android:layout_width="381dp"
        android:layout_height="305dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvarContato"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>